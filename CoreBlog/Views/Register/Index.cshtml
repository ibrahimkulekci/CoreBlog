@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>


<section class="w3l-contact-2 py-5">
    <div class="container py-lg-5 py-md-4 ContactSection">
        <h3 class="section-title-left">Kayıt Ol</h3>
        <div class="contact-grids d-grid">
            <div class="">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="input-grids">
                        <div class="form-input">
                            <label>Ad Soyad:</label>
                            @*<input type="text" name="WriterName">*@
                            @Html.TextBoxFor(x => x.WriterName)
                            @Html.ValidationMessageFor(x => x.WriterName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-input">
                            <label>E-mail: </label>
                            @*<input type="email" name="WriterMail">*@
                            @Html.TextBoxFor(x => x.WriterMail)
                            @Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-input">
                            <label>Şifre:</label>
                            @*<input type="password" name="WriterPassword">*@
                            @Html.PasswordFor(x => x.WriterPassword)
                            @Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" })
                            <label>Şifre(Tekrar):</label>
                            <input type="password" name="WriterPasswordConfirm">
                        </div>
                        <button class="btn btn-style btn-outline">Kayıt Ol</button>
                        <br /><br />
                        <p>
                            <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                        </p>
                    </div>
                }
            </div>
        </div>
        <script>
            $('#btn1').click(function () {
                swal("Site Kabul Şartları", "Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne varmadan gönderilmeye devam edilecektir. Eğer e-posta bülteninden çıkmak iterseniz mail ileti dizisini durdurabilirsiniz, şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullanıcının görmeyeceği şekilde veri tabanlarımızda saklanmaktadır.");
            });
        </script>
</section>

