        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4 w3BlogLayout">
                <div class="single-post-image mb-5">
                    <div class="post-content">

                        <div class="post-thumbnail">
                            <img src="@item.BlogImage" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="@item.BlogTitle">
                        </div><!-- .post-thumbnail -->

                    </div>
                </div>

                <div class="single-post-content">

                    @item.BlogContent

