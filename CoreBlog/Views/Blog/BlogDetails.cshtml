@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{

<article id="post-83" class="post-83 post type-post status-publish format-standard has-post-thumbnail hentry category-culture">

    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3 w3BlogLayout">
            <h3 class="blog-desc-big text-center mb-4">
                @item.BlogTitle  
            </h3>
            <div class="blog-post-align">

                <div class="blog-post-img">
                    <a href="https://wp.w3layouts.com/designblog/author/w3layouts/">
                        <img src="https://secure.gravatar.com/avatar/328cc1f23e4a3b73aa60ee6ced1897a1?s=70&amp;d=mm&amp;r=g" alt="" class="rounded-circle img-fluid">
                    </a>
                </div>

                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">

                        <a href="https://wp.w3layouts.com/designblog/author/w3layouts/">
