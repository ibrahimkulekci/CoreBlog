@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Kategoriler</h2>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">        
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Pasif Yap</th>
                                <th>Aktif Yap</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@item.CategoryName</td>
                                <td><a href="~/Admin/Category/DeleteCategory/@item.CategoryID" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Pasif Yap</a></td>

                                <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
                                <td><a href="#" class="btn btn-success">Düzenle</a></td>
                            </tr>
                            }
                            </tbody>
                    </table>
                    <br />
                    <a href="~/admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
                    <br />
                    <br />
                    @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page }))
                </div>
            </div>
        </div>
    </div>
</div>

