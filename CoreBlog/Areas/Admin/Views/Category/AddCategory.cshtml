@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Yeni Kategori</h2>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">                
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            @using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
                            {                               
                                <div class="form-group">
                                    @Html.Label("Kategori Adı")
                                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x=>x.CategoryName)
                                </div>
                                <div class="form-group">
                                    @Html.Label("Kategori Açıklaması")
                                    @Html.TextAreaFor(x => x.CategoryDescription,10,3, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.CategoryDescription)
                                </div>
                                <div>
                                    <button class="btn btn-primary float-right" type="submit"><strong>Kaydet</strong></button>                                    
                                </div>
                            }
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>